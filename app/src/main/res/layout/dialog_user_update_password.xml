<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Modify User Password"
    android:textColor="@color/ocean_blue"
    android:textSize="28sp"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/et_modifyPassword_currentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter current password"
        android:inputType="textPassword"
        android:padding="8dp" />

    <EditText
        android:id="@+id/et_modifyPassword_newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new password"
        android:inputType="textPassword"
        android:padding="8dp" />

    <EditText
        android:id="@+id/et_modifyPassword_confirmNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm new password"
        android:inputType="textPassword"
        android:padding="8dp" />

    <Button
        android:id="@+id/btn_modifyPassword_saveChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Password Changes"
        android:padding="16dp"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_modifyPassword_cancelChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:padding="16dp"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        android:layout_marginTop="16dp"  />
</LinearLayout>