<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".home.signUp.SignUpFragment">

    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:background="@drawable/custom_edittext">

                <TextView
                    android:id="@+id/tv_fragmentSignUp_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Sign up to the app"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/ocean_blue"/>

                <EditText
                    android:id="@+id/et_fragmentSignUp_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:inputType="text"
                    android:hint="Username"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"/>

                <EditText
                    android:id="@+id/et_fragmentSignUp_mail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp" />

                <EditText
                    android:id="@+id/et_fragmentSignUp_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"/>

                <EditText
                    android:id="@+id/et_fragmentSignUp_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:inputType="text"
                    android:hint="Name"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp" />

                <EditText
                    android:id="@+id/et_fragmentSignUp_surname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:inputType="text"
                    android:hint="Surname"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp" />

                <EditText
                    android:id="@+id/et_fragmentSignUp_birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:inputType="date"
                    android:hint="Birthdate (jj-mm-aaaa)"
                    android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"/>

                <Spinner
                    android:id="@+id/sp_fragmentSignUp_gender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:padding="8dp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black" />


                <EditText
                    android:id="@+id/et_fragmentSignUp_height"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:inputType="numberSigned"
                    android:hint="Height (cm)"
                    android:drawableLeft="@drawable/ic_baseline_arrow_circle_up_24"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"/>

                <EditText
                    android:id="@+id/et_fragmentSignUp_weight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:inputType="numberSigned"
                    android:hint="Weight (kg)"
                    android:drawableLeft="@drawable/ic_baseline_balance_24"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp" />

                <Button
                    android:id="@+id/btn_fragmentSignUp_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Sign Up"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/ocean_blue"
                    app:cornerRadius="20dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </android.widget.ScrollView>

</LinearLayout>
