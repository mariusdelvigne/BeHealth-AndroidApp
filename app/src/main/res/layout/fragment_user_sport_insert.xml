<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentUserSportInsertLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insert.sport.UserSportInsertFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_fragmentUserSportInsert_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Insert new sport"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_fragmentUserSportInsert_userSportNameTitle"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Sport name :"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/sp_fragmentUserSportInsert_sportSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_fragmentUserSportInsert_userSportDateStartTitle"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Start date and time :"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/et_fragmentUserSportInsert_userSportDateStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="Select start date and time"
                    android:padding="8dp"
                    android:background="@drawable/datetime_selector"
                    android:clickable="true"
                    android:focusable="true" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_fragmentUserSportInsert_userSportDateEndTitle"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="End date and time :"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/et_fragmentUserSportInsert_userSportDateEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="Select end date ans time"
                    android:padding="8dp"
                    android:background="@drawable/datetime_selector"
                    android:clickable="true"
                    android:focusable="true" />

            </TableRow>


            <Button
                android:id="@+id/btn_fragmentUserSportInsert_insertUserSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:textSize="18sp"
                app:cornerRadius="10dp"
                android:text="Insert" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>